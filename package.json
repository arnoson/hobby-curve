{
  "name": "hobby-curve",
  "version": "0.1.0",
  "description": "A tiny typescript implementation of the hobby curve algorithm without dependencies.",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "type": "module",
  "scripts": {
    "dev": "esbuild ./src/index.ts --target=esnext --bundle --format=esm --watch --outdir=./dist",
    "build": "esbuild ./src/index.ts --target=esnext --bundle --format=esm --minify --outdir=./dist",
    "test": "jest",
    "publish": "npm run build && np --no-2fa"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@swc/jest": "^0.2.5",
    "@types/jest": "^27.0.2",
    "esbuild": "^0.13.13",
    "jest": "^27.3.1",
    "np": "^7.5.0"
  }
}
